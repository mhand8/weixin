/**index.wxss**/
@import "/styles/iconfont.wxss";

.container {
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background: #fff;
}

/* 登录区域样式 */
.login-container {
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  color: #4080ff;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.avatar-section {
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
  width: 200rpx !important;
  height: 200rpx !important;
  padding: 0 !important;
  border: 2rpx solid #4080ff;
  border-radius: 50%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.avatar-text {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.form {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.input {
  border: none;
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background: #f0f1f5;
  color: #999;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  text-align: center;
}

.submit-btn.active {
  background: #4080ff;
  color: #fff;
}

/* 已登录状态样式 */
.user-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 60rpx 0;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.user-name {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

/* 功能区域样式 */
.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  padding: 30rpx;
}

.menu-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.menu-item:active {
  transform: scale(0.98);
}

.icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.icon-wrapper.meeting {
  background: rgba(64, 158, 255, 0.1);
}

.icon-wrapper.members {
  background: rgba(103, 194, 58, 0.1);
}

.icon-wrapper.album {
  background: rgba(230, 162, 60, 0.1);
}

.icon-wrapper.profile {
  background: rgba(144, 147, 153, 0.1);
}

.menu-icon {
  font-size: 48rpx;
  font-weight: bold;
}

.icon-wrapper.meeting .menu-icon {
  color: #409EFF;
}

.icon-wrapper.members .menu-icon {
  color: #67C23A;
}

.icon-wrapper.album .menu-icon {
  color: #E6A23C;
}

.icon-wrapper.profile .menu-icon {
  color: #909399;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

