.container {
  min-height: 100vh;
  background: #f6f6f6;
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(to right, #4080ff, #3c7cfc);
  padding: 40rpx 30rpx;
  color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.info {
  margin-left: 24rpx;
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.user-id {
  font-size: 26rpx;
  opacity: 0.8;
}

.user-tag {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.menu-list {
  margin-top: 20rpx;
}

.menu-group {
  background: #fff;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.icon-arrow {
  color: #ccc;
  font-size: 32rpx;
}

.logout-btn {
  margin: 60rpx 40rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
}

.phone {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
} 