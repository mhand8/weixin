.container {
  padding: 30rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

.header {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.album-info {
  margin-bottom: 20rpx;
}

.album-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.album-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.creator-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.creator-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.creator-name {
  font-size: 26rpx;
  color: #666;
}

.photo-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  padding: 10rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 100rpx;
}

.photo-wrapper {
  position: relative;
  width: 100%;
  height: 220rpx;
}

.photo-item {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  background: #f0f0f0;
}

.photo-delete {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.delete-icon {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.empty-tip {
  grid-column: span 3;
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.action-btn.add {
  background: #4285f4;
  color: #fff;
}

.action-btn.delete {
  background: #ff4d4f;
  color: #fff;
} 