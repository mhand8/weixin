/* 引入字体图标 */
@import "/styles/iconfont.wxss";

.container {
  min-height: 100vh;
  background: #f6f6f6;
  padding: 30rpx;
}

/* 头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-section {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.count {
  font-size: 26rpx;
  color: #999;
}

.publish-btn {
  font-size: 28rpx;
  color: #4285f4;
  background: rgba(66, 133, 244, 0.1);
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  line-height: 1.5;
}

/* 活动列表 */
.meetings-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.meeting-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  position: relative;
}

.meeting-info {
  margin-bottom: 20rpx;
}

.meeting-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.meeting-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  color: #666;
  font-size: 26rpx;
  margin-bottom: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-item .iconfont {
  font-size: 28rpx;
  color: #999;
}

.meeting-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.meeting-stats {
  display: flex;
  gap: 40rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.stat-count {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.join-btn {
  flex: 1;
  background: #4285f4;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 8rpx;
  line-height: 1.5;
  text-align: center;
}

.join-btn[disabled] {
  background: #67c23a !important;
  color: #fff !important;
  opacity: 1;
}

.edit-btn {
  width: 120rpx !important;
  height: 72rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #4285f4 !important;
  border: 2rpx solid #4285f4 !important;
  border-radius: 8rpx;
  background: transparent;
}

.delete-btn {
  width: 120rpx !important;
  height: 72rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #ff4d4f !important;
  border: 2rpx solid #ff4d4f !important;
  border-radius: 8rpx;
  background: transparent;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 120rpx 0;
} 